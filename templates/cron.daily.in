home="${buildout:directory}"

day=`/bin/date '+%w'`
case ${:dollar}day in
0) ${:dollar}{home}/bin/snapshotbackup ;;
5) ${:dollar}{home}/bin/supervisorctl restart instance2 ;;
6) ${:dollar}{home}/bin/supervisorctl restart instance1 ;;
esac
exit 0
